#include <stdio.h>
int main() {
    float l,b,A,P;
    printf("Enter the length of the rectangle: ");
    scanf("%f",&l);
    printf("Enter the breadth of the rectangle: ");
    scanf("%f", &b);
    A=l*b;
    P= 2*(l+b);
    printf("Area of the rectangle = %.2f\n", A);
    printf("Perimeter of the rectangle = %.2f\n", P);
    return 0;
}
